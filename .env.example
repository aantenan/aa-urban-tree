# Database
DATABASE_URL=sqlite:///./local.db

# Authentication
AUTH_PROVIDER=mock
# Fake accounts for mock auth (format: email:password or email:password:Name, comma or newline separated)
# MOCK_AUTH_USERS=dev@example.com:dev, admin@example.com:admin
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# SMTP (email)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Storage
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./uploads

# S3 (when STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# Frontend
VITE_API_BASE_URL=http://localhost:8000
